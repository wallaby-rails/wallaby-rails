<% # can be overridden %>
<nav>
  <ul>
    <%# list %>
    <li role="presentation">
      <%= index_link(current_model_class, html_options: { class: 'resources__index' }) {} %>
    </li>

    <%# show %>
    <% if action_name == 'edit' %>
      <li role="presentation">
        <%= show_link(resource, html_options: { class: 'resource__show' }) {} %>
      </li>
    <% end %>

    <%# edit %>
    <% if action_name == 'show' %>
      <li role="presentation">
        <%= edit_link(resource) {} %>
      </li>
    <% end %>

    <%# delete %>
    <% if action_name == 'show' %>
      <li role="presentation">
        <%= delete_link(resource) {} %>
      </li>
    <% end %>
  </ul>
</nav>
